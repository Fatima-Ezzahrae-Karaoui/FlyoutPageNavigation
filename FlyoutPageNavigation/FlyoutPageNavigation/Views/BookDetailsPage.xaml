<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutPageNavigation.Views.BookDetailsPage">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15" >
            <Label Text="Title" FontSize="Medium" />
            <Label Text="{Binding Book.Title}" />

            <Label Text="Short Description" FontSize="Medium" />
            <Label Text="{Binding Book.ShortDescription}" FontSize="Large" Margin="0" />

            <Label Text="Long Description" FontSize="Medium" />
            <Label Text="{Binding Book.LongDescription}" FontSize="Large" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>